<sdf version='1.5'>
  <model name='iris_realsense_camera_3Dlidar'>
    <include>
      <uri>model://iris</uri>
    </include>

    <include>
      <uri>model://realsense_camera</uri>
      <pose>0.1 0 0 0 0 0</pose>
    </include>
    <joint name="realsense_camera_joint" type="revolute">
      <child>realsense_camera::link</child>
      <parent>iris::base_link</parent>
      <axis>
        <xyz>0 0 1</xyz>
        <limit>
          <upper>0</upper>
          <lower>0</lower>
        </limit>
      </axis>
    </joint>

    <include>
      <uri>model://3Dlidar_16</uri>
      <pose>0 0 0.1 0 0 0</pose>
    </include>
    <joint name="3Dlidar_VLP16_joint" type="fixed">
      <child>3Dlidar_16::link</child>
      <parent>iris::base_link</parent>
      <axis>
        <xyz>0 0 1</xyz>
        <limit>
          <upper>0</upper>
          <lower>0</lower>
        </limit>
      </axis>
    </joint>

  </model>
</sdf>
